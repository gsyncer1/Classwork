#include <stdio.h>

int main()
{
   int i, letter = 0; 

   printf("Number: ");
   scanf("%d", &letter);

   for(i = 0; i < letter; i++)
      printf("%c ", 'a'+i);
   
   printf("\n");

   i = 0;
   while (i < letter)
   {
      printf("%c ", 'a'+i);
      i++;
   }

   printf("\n");

   i = 0;
   do
   {
      printf("%c ", 'a'+i);
      i++;
   } while (i < letter);
   printf("\n");


}
